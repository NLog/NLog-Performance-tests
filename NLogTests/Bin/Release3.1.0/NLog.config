<!-- Use this declaration for detailed logging of issues -->
<!--
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Trace"
      internalLogToConsole="true"
      internalLogToConsoleError="true"
      internalLogFile="internalErrors.txt">
-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
<targets>
        <!-- Log in a separate thread, 
             possibly queueing up to 1000000 messages. 
             When the queue overflows, block until there’s room in the queue
        -->


    <!-- type: asynchronous, buffered target writes -->
    <!-- overflowAction: [Default: Discard] Use “Block” to write all messages -->
    <!--   Improve performance by tweaking queueLimit, batchSize and -->
    <!--      timeToSleepBetweenBatches -->
    <!-- queueLimit: [Default: 10000] Limit on the number of requests in -->
    <!--   the lazy writer thread request queue -->
    <!-- batchSize: [Default: 100] Number of log events that should -->
    <!--   be processed in a batch by the lazy writer thread -->
    <!-- timeToSleepBetweenBatches[Default: 50] Lower value > CPU -->

            <!--<target name="AsyncFileWebHostApplicationLog" 
                  type="AsyncWrapper"                       
                  overflowAction="Block"                    
                  queueLimit="1073741824"                     
                  batchSize="10"                          
                  timeToSleepBetweenBatches="10"             
            >-->
    <!-- archiveAboveSize: archiving considerably slows down file logging in multi-process scenarios -->
    <!-- archiveEvery:archiving considerably slows down file logging in multi-process scenarios -->
    <!-- concurrentWrites: [Default: true] concurrentWrites=true and keepFileOpen=true -->
    <!--   for concurrentWrites to work -->
    <!-- keepFileOpen:[Default: false] true improves performance -->
    <!-- autoFlush:[Default: true] false improves performance -->
    <!-- bufferSize:[Default: 32768] increasing this buffer improves performance -->
                <target name="webHostApplicationLog"
                    xsi:type="File"
                    layout="${message}"
                    fileName="C:\logs\application\APP-Log.txt"
                    archiveFileName="c:\logs\application\archive\APP-Log.{########}.txt"
                    encoding="iso-8859-2"
                    archiveNumbering="Rolling"    
                    maxArchiveFiles="5" 
                    archiveAboveSize="1073741824"   
                    archiveEvery="Day"
                    concurrentWrites="true"       
                    keepFileOpen="true"           
                    autoflush="false"             
                    bufferSize="1073741824"            
                />
            <!--</target>-->
    </targets>

    <rules>
            <logger name="*" minlevel="Debug" writeTo="webHostApplicationLog" />
    </rules>

</nlog>