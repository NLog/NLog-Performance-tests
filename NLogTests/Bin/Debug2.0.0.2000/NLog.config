<?xml version="1.0" encoding="utf-8" ?>
<!--
NLog:
    http://www.nlog-project.org/
Shaw Logging components:
    http://shawwiki/mediawiki/index.php/Shaw.Components.Logging
-->
<!-- Use this declaration for detailed logging of issues -->
<!--
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Trace"
      internalLogToConsole="true"
      internalLogToConsoleError="true"
      internalLogFile="internalErrors.txt">
-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
<targets>
    <!-- type: asynchronous, buffered target writes -->
    <!-- overflowAction: [Default: Discard] Use “Block” to write all messages -->
    <!--   Improve performance by tweaking queueLimit, batchSize and -->
    <!--      timeToSleepBetweenBatches -->
    <!-- queueLimit: [Default: 10000] Limit on the number of requests in -->
    <!--   the lazy writer thread request queue -->
    <!-- batchSize: [Default: 100] Number of log events that should -->
    <!--   be processed in a batch by the lazy writer thread -->
    <!-- timeToSleepBetweenBatches[Default: 50] Lower value > CPU -->

    <target name="AsyncFileWebHostApplicationLog" 
          type="AsyncWrapper"                       
          overflowAction="Discard"                    
          queueLimit="10000"                     
          batchSize="100"                          
          timeToSleepBetweenBatches="50"             
    >
        <target name="applicationLog"
          xsi:type="File"
          layout="${message}"
          fileName="C:\logs\application\_LossyArchiveConcurrentWritesAutoFlushExplicit.txt"
          archiveFileName="c:\logs\application\archive\_LossyArchiveConcurrentWritesAutoFlushExplicit.{########}.txt"
            encoding="iso-8859-2"
            archiveNumbering="Rolling"    
            maxArchiveFiles="5" 
            archiveAboveSize="1073741824"   
            archiveEvery="Day"
            concurrentWrites="true"       
            keepFileOpen="false"           
            autoflush="true"             
            bufferSize="32768" />
    </target>
  </targets>
  <rules>
    <!--
        Default minLevel to 'Error'.
        For diagnosing try one of the following and then reset to default level.
            Trace - Very detailed log messages, potentially of a high frequency and volume 
            Debug - Less detailed and/or less frequent debugging messages 
            Info - Informational messages 
            Warn - Warnings which don't appear to the user of the application 
            Error - Error messages 
            Fatal - Fatal error messages. After a fatal error the application usually terminates. 
		-->
    <logger name="*"
			minlevel="Debug"
			writeTo="AsyncFileWebHostApplicationLog" />
  </rules>    
</nlog>